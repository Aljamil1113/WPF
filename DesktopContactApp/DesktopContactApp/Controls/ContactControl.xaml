<UserControl x:Class="DesktopContactApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopContactApp.Controls"
             mc:Ignorable="d" Height="82" Width="183">
    <Grid Background="#AAE5E5E5">
        <StackPanel Margin="5">
            <TextBlock Text="Name LastName" x:Name="nameTextBlock" FontSize="20" FontWeight="Bold"></TextBlock>
            <TextBlock Text="example@domain.com" x:Name="emailTextBlock" FontSize="15" Foreground="DodgerBlue"></TextBlock>
            <TextBlock Text="(123) 456 7890" x:Name="phoneTextBlock" FontSize="15" FontStyle="Italic"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
